# Application Settings
SERVICE_NAME=sync-svc
ENVIRONMENT=development
LOG_LEVEL=INFO

# Menu Service Integration
MENU_SERVICE_BASE_URL=https://api.example.com/menu
MENU_SERVICE_API_KEY=your-menu-service-api-key-here

# Admin API Security
ADMIN_API_KEY=your-admin-api-key-here

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012

# DynamoDB Tables
DYNAMODB_SYNC_STATUS_TABLE=restaurant-sync-status
DYNAMODB_SYNC_ERRORS_TABLE=restaurant-sync-errors
DYNAMODB_SYNC_OPERATIONS_TABLE=restaurant-sync-operations

# EventBridge
EVENTBRIDGE_BUS_NAME=restaurant-events

# DoorDash Platform Configuration
DOORDASH_CLIENT_ID=your-doordash-client-id
DOORDASH_CLIENT_SECRET=your-doordash-client-secret
DOORDASH_ENVIRONMENT=sandbox  # or production
DOORDASH_API_BASE_URL=https://openapi.doordash.com

# Uber Eats Platform Configuration
UBEREATS_CLIENT_ID=your-ubereats-client-id
UBEREATS_CLIENT_SECRET=your-ubereats-client-secret
UBEREATS_ENVIRONMENT=sandbox  # or production
UBEREATS_API_BASE_URL=https://api.uber.com/v2/eats

# Grubhub Platform Configuration
GRUBHUB_CLIENT_ID=your-grubhub-client-id
GRUBHUB_CLIENT_SECRET=your-grubhub-client-secret
GRUBHUB_ENVIRONMENT=sandbox  # or production
GRUBHUB_API_BASE_URL=https://api.grubhub.com

# OpenTelemetry Configuration
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=sync-svc
OTEL_TRACES_EXPORTER=otlp
OTEL_METRICS_EXPORTER=otlp
OTEL_LOGS_EXPORTER=otlp

# Retry Configuration
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=2

# Feature Flags
ENABLE_DOORDASH_SYNC=true
ENABLE_UBEREATS_SYNC=true
ENABLE_GRUBHUB_SYNC=true